{{- if not .Values.phpipamMysql.existingSecret }}
{{- if or (not .Values.allowEmptyRootPassword) (or .Values.mysqlRootPassword .Values.mysqlPassword) }}
apiVersion: v1
kind: Secret
metadata:
  name: {{ .Values.phpipamMysql.name }}-secret
  namespace: {{ .Release.Namespace }}
  labels:
    app: {{ template "ipam.fullname" . }}
    chart: {{ template "ipam.chart" . }}
    release: "{{ .Release.Name }}"
    heritage: "{{ .Release.Service }}"
type: Opaque
data:
  {{ if .Values.phpipamMysql.mysqlRootPassword }}
  mysql-root-password:  {{ .Values.phpipamMysql.mysqlRootPassword | b64enc | quote }}
  {{ else }}
  {{ if not .Values.phpipamMysql.allowEmptyRootPassword }}
  mysql-root-password: {{ randAlphaNum 10 | b64enc | quote }}
  {{ end }}
  {{ end }}
  {{ if .Values.phpipamMysql.mysqlPassword }}
  mysql-password:  {{ .Values.phpipamMysql.mysqlPassword | b64enc | quote }}
  {{ else }}
  {{ if not .Values.phpipamMysql.allowEmptyRootPassword }}
  mysql-password: {{ randAlphaNum 10 | b64enc | quote }}
  {{ end }}
  {{ end }}
  {{ if .Values.phpipamMysql.mysqlUsername }}
  mysql-username:  {{ .Values.phpipamMysql.mysqlUsername | b64enc | quote }}
  {{ else }}
  mysql-username: {{ .Values.phpipamMysql.name | b64enc | quote }} 
  {{ end }}
{{ end }}
{{- end }}
